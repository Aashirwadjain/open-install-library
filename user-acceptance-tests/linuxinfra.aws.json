{
    "global_tags": {
        "owning_team": "OpenSource",
        "Environment": "development",
        "Department": "Product",
        "Product": "Virtuoso"
    },

    "resources": [{
        "id": "host1",
        "display_name": "MyHost1",
        "provider": "aws",
        "type": "ec2",
        "size": "t3a.nano"
    }],

    "instrumentations": {
      "resources": [
        {
            "id": "nr_infra",
            "resource_ids": ["host1"],
            "provider": "newrelic",
            "source_repository": "https://[credential:git:username]@github.com/newrelic/open-install-library",
            "deploy_script_path": "user-acceptance-tests/linux/roles",
            "params": {
                "recipe_content_url": [
                "https://api.github.com/repos/newrelic/open-install-library/contents/recipes/newrelic/infra-agent/amazonlinux2.yml",
                "https://api.github.com/repos/newrelic/open-install-library/contents/recipes/newrelic/logs/logs.yml",
                "https://api.github.com/repos/newrelic/open-install-library/contents/recipes/newrelic/flex/flex.yml"
                ],
                "git_token": "[credential:git:username]"
            }
        }]
    }
}
